<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C9C9C"
    android:orientation="vertical"
    tools:context="com.example.doanandroid.Controller.ChinhSuaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#B1374F">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:text="Tiền :"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>

        <EditText


            android:maxLength="11"
            android:id="@+id/etPriceDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nhập số tiền"
            android:inputType="number"
            android:paddingLeft="90dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:text="Danh mục:"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>

        <ImageView
            android:id="@+id/imgEditDanhMucDetail"
            android:layout_width="40dp"
            android:layout_height="40dp"></ImageView>

        <TextView
            android:id="@+id/txtEditTenDanhMuc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnListChi"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/moneyoff"
            android:background="@drawable/custom_btn"
            android:text="Chi tiêu"
            ></Button>

        <Button
            android:id="@+id/btnListThu"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/addmoney"
            android:background="@drawable/custom_btn"
            android:text="Thu Nhập"
            ></Button>
    </LinearLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_marginStart="55dp"
        android:columnWidth="80dp"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:verticalSpacing="25dp"></GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_calendar"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Ngày tháng"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/txtEditNgayDetail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Hôm nay"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>

        <ImageButton
            android:id="@+id/imgChonNgay"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_edit"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_note"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Ghi chú"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>

        <EditText
            android:id="@+id/edtEditGhiChuDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Chưa nhập vào"
            android:inputType="text"
            android:maxLength="30"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck"></EditText>

    </LinearLayout>

    <Button
        android:id="@+id/btnCapNhat"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_btn"
        android:drawableLeft="@drawable/update"
        android:text="Cập nhật"
        android:textColor="@color/white"></Button>


</LinearLayout>
