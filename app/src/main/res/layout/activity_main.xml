<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/kkk"
        tools:context=".HomeMain"
        android:orientation="vertical"

        android:fitsSystemWindows="true"
        tools:openDrawer="start">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:padding="30dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txthello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào!"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/txtname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txthello"
                android:text="Quang Huy"
                android:textColor="#fff"
                android:textSize="26dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtSoDUMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtname1"
                android:text="0vnđ"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEditUser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"

                android:background="@drawable/user"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:background="@drawable/bell"
                tools:ignore="SpeakableTextPresentCheck" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewthuchi1"
                android:layout_width="match_parent"
                android:layout_height="120dp"

                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:onClick="ConvertActivity"
                    android:id="@+id/relativeIncomeSpending"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#B8A70F"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtthuchi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Thu - Chi "
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtthuchi"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="Tích lũy"
                        android:textColor="#fff" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:maxHeight="100dp"
                        android:src="@drawable/kaka" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewlichsu"
                android:layout_width="match_parent"
                android:layout_height="120dp"

                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:onClick="ConvertActivity"
                    android:id="@+id/relativeHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#FF3BBE"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtlichsu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Lịch Sử "
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtlichsu"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="Tất cả khoản chi tiêu"
                        android:textColor="#fff" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:maxHeight="100dp"
                        android:src="@drawable/hist" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewThongke"
                android:layout_width="match_parent"
                android:layout_height="120dp"

                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:onClick="ConvertActivity"
                    android:id="@+id/relativeStatistical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#316C17"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtThongke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Thống kê "
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtThongke"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="thống kê theo tỉ lệ chi tiêu"
                        android:textColor="#fff" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:maxHeight="100dp"
                        android:src="@drawable/tk" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardvieweditdanhmuc"
                android:layout_width="match_parent"
                android:layout_height="120dp"

                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:onClick="ConvertActivity"
                    android:id="@+id/relativeEditCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#0F916C"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txteditdanhmuc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Chỉnh sửa danh mục "
                        android:textColor="#fff"
                        android:textSize="27dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txteditdanhmuc"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="Thay đổi danh mục bạn muốn"
                        android:textColor="#fff" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:maxHeight="100dp"
                        android:src="@drawable/edi" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>