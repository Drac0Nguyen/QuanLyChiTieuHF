<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:weightSum="10"
    android:orientation="vertical"
    android:background="#9C9C9C"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="160dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_weight="1"
        android:background="#B1374F"
        android:gravity="center"
        android:singleLine="true"
        android:text="Cập Nhật Tên HIển Thị"
        android:textColor="#E1E7EC"
        android:textSize="20dp" />
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_weight="4"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:text="Nhập tên cần thay đổi: "
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:ems="10"
            android:hint="Nhập tên của bạn vào đây"
            android:maxLength="15"
            android:minHeight="48dp"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_weight="40"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <Button
            android:id="@+id/btnSaveUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_weight="4"
            android:background="@drawable/custom_btn"
            android:text="Lưu" />

        <Button
            android:id="@+id/btnCancleUserName"
            android:text="Hủy"
            android:layout_weight="4"
            android:background="@drawable/custom_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>